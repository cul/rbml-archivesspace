{
	"$schema": "https://json-schema.org/2020-12/schema#",
	"$id": "cul.json",
	"type": "object",
	"title": "DACSspace Single Level Required Schema",
	"required": [
		"id_0",
		"title",
		"dates",
		"extents",
		"linked_agents",
		"lang_materials",
		"metadata_rights_declarations"
	],
	"properties": {
		"id_0": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"dates": {
			"type": "array",
			"minItems": 1
		},
		"extents": {
			"type": "array",
			"minItems": 1
		},
		"notes": {
			"type": "array",
			"allOf": [
				{
					"contains": {
						"type": "object",
						"required": [
							"type"
						],
						"properties": {
							"type": {
								"type": "string",
								"const": "scopecontent"
							}
						}
					}
				},
				{
					"contains": {
						"type": "object",
						"required": [
							"type"
						],
						"properties": {
							"type": {
								"type": "string",
								"const": "accessrestrict"
							},
							"subnotes": {
								"type": "array",
								"contains": {
									"type": "object",
									"required": [
										"content"
									],
									"properties": {
										"content": {
											"type": "string",
											"pattern": ".*o..?.?site.*"
										}
									}
								}
							}
						}
					}
				}
			]
		},
		"lang_materials": {
			"type": "array",
			"minItems": 1
		}
	}
}